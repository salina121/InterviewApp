@page
@model InterviewBot.Pages.SubTopics.IndexModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["SubTopics"];
    var topicIdForCreate = Model.CurrentTopic?.Id;
    var currentCulture = HttpContext.Request.Query["culture"].ToString();
    var cultureParam = !string.IsNullOrEmpty(currentCulture) ? $"?culture={currentCulture}" : "";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2>@Localizer["List of SUB TOPICS"]</h2>
            @if (Model.CurrentTopic != null)
            {
                <h4 class="text-muted">@Localizer["TOPIC"]: @Model.CurrentTopic.Title</h4>
            }
        </div>
        <a href="/SubTopics/Create?topicId=@topicIdForCreate@(string.IsNullOrEmpty(cultureParam) ? "" : "&" + cultureParam.Substring(1))" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> @Localizer["Create New"]
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>@Localizer["Title"]</th>
                            <th>@Localizer["Topic"]</th>
                            <th>@Localizer["Interview Completed"]</th>
                            <th>@Localizer["Actions"]</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var st in Model.SubTopics)
                        {
                            <tr>
                                <td>@st.Title</td>
                                <td>@st.TopicName</td>
                                <td>@(st.IsInterviewCompleted ? Localizer["Yes"] : Localizer["No"])</td>
                                <td>
                                    @if (st.IsInterviewCompleted)
                                    {
                                        <a href="/InterviewSessions/Results?id=@st.CompletedSessionId@(string.IsNullOrEmpty(cultureParam) ? "" : "&" + cultureParam.Substring(1))" class="btn btn-sm btn-outline-success">@Localizer["View Resume"]</a>
                                    }
                                    else
                                    {
                                        <a href="/Chat?subTopicId=@st.Id@(string.IsNullOrEmpty(cultureParam) ? "" : "&" + cultureParam.Substring(1))" class="btn btn-sm btn-outline-primary">@Localizer["Start Interview"]</a>
                                    }
                                    <a href="/SubTopics/Edit/@st.Id@cultureParam" class="btn btn-sm btn-outline-secondary">
                                        <i class="bi bi-pencil"></i> @Localizer["Edit"]
                                    </a>
                                    <form method="post" action="/SubTopics?handler=Delete&id=@st.Id&topicId=@Model.CurrentTopic?.Id@(string.IsNullOrEmpty(cultureParam) ? "" : "&" + cultureParam.Substring(1))" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('@Localizer["Are you sure?"]');">
                                            <i class="bi bi-trash"></i> @Localizer["Delete"]
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>